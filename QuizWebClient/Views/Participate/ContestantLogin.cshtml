@{
    ViewBag.Title = "Deltager Login";
}


<div class="row">
    <div class="col-lg-12">
        <h2>Deltager login</h2>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label for="Contestant">Dit navn</label>
                <input class="form-control" id="Contestant" type="text" name="name" />
            </div>
            <input type="submit" class="btn btn-default" value="Login" />
        }
    </div>
</div>