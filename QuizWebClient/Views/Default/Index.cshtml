
@{
    ViewBag.Title = "Quiz søgning";
}


<div class="row">
    <div class="col-lg-12">
        <h2>Quiz søgning</h2>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }

        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label for="authorInitials">Undervisers initialer</label>
                <input class="form-control" id="authorInitials" type="text" name="authorInitials" />
            </div>
            <input type="submit" class="btn btn-default" value="Find quiz" />
        }
    </div>
</div>